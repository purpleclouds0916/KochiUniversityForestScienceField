<% if @meaning.present? %>
<section id="" class="meaning section">
	<div class="meaning__inner inner">
		<h2 class="section-title">森林を学ぶ価値</h2><!-- /.section-title -->
		<div class="meaning__items">
		<% @meaning.each do |meaning| %>
			<div class="meaning__item ">
				<div class="meaning__img">
					<%= image_tag  meaning.images.first.variant(resize:'1200x800').processed %>
				</div><!-- /.meaning__img -->
				<div class="meaning__body">
					<div class="meaning__title"><%= meaning.title %></div><!-- /.meaning__title -->
					<div class="meaning__content"><%= meaning.content %></div><!-- /.meaning__content -->
				</div><!-- /.meaning__body -->
			</div><!-- /.meaning__item -->
		<% end %>	
		</div><!-- /.meaning__items -->
		<div class="meaning__reference">
		<% if @meaning.first.external_url.present? %>
			<% @meaning.each do |meaning| %>
			<div class="meaning__reference__title">参考文献</div>
			<div class="meaning__content"><a href="<%= meaning.external_url  %>"><%= meaning.title %>:<%= meaning.url_references %></a>閲覧日(<%= meaning.updated_at.strftime('%Y/%m/%d') || meaasage.created_at.strftime('%Y/%m/%d') %>)</div><!-- /.meaning__reference -->
			</div><!-- /.meaning__reference -->
	     	<% end %>
		<% end %>	 	
		</div>
	</div><!-- /.meaning__inner -->
</section><!-- /.meaning -->
<% end %>

