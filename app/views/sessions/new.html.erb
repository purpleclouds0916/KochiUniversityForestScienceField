<% provide(:title, 'ログイン') %>
<section id="" class="login section">

  <div class="loggin__inner inner">
  <h1 class="header__logo"><%= image_tag "login.png", :alt => '学森林科学領域ホームページ' %></h1><!-- /.header__logo -->
    <h2 class="section-title">管理者ログイン</h2><!-- /.section-title -->
    <div class="contact__item login__item">
      <div id="formWrapper">
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
                <% flash.each do |message_type, message| %>
                <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
        <% end %>
            <dl class="contact__controls">
            <div class="contact__control">
              <dt>
                <%= f.label :email, "メールアドレス" ,class:"contact__label" %>
              </dt>
              <dd>
                <%= f.email_field :email, class:"form-input" %>
              </dd>
            </div><!-- /.contact__control -->
            <div class="contact__control contact__control__password">
              <dt>
                <%= f.label :password, "パスワード" , class:"contact__label" %>
              </dt>
              <dd>
                <%= f.password_field :password, class:"form-input" %>
              </dd>
            </div><!-- /.contact__control -->
            <div class="checkbox">
              <label>
                <input type="checkbox" name="checkbox[]" class="checkbox-input">
                <span class="checkbox-parts">ログイン状態を保持する</span>
              </label><br>
            </div>
          </dl><!-- /.contact__controls -->
          <div class="contact__submit">
          　 <%= f.submit "ログイン", class: "button-arrow-right" %>
          </div><!-- /.contact__submit -->
        <% end %>
        <p class="forget__password"><a href="#">・パスワードをお忘れですか?
        </a></p>
      </div>
    </div><!-- /.contact__item -->
  </div><!-- /.contact__inner -->
</section><!-- /.contact -->

