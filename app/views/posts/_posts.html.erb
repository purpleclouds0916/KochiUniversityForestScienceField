<tr id="post-<%= post.id %>">
<td class="table-titles" data-label="">        
        <%= gravatar_for user, size: 50 %>
    <div>
        <%= post.title %>
    <nav class="table-nav">
        <ul>
            <% if current_user.admin? || current_user?(user)%>
            <li><%= link_to "編集", edit_user_path(user) %></li>
            <% end %>
            <% if current_user.admin? && !current_user?(user) %>
        |   <li><%= link_to "削除", user, :method => :delete,
                                  data: { confirm: "You sure?" } %></li>
            <% end %>
        </ul>
    </nav>
    </div>
</td>
<td data-label="作成者"><%= link_to post.user.name, post.user %></td>
<td data-label="作成日"><%= time_ago_in_words(post.created_at) %></td>
<td data-label="更新日">2021/12/29</td>
</tr>