<% unless controller.controller_name == "users" && controller.action_name == "index" %>
    <% if controller.controller_name == "users" %>
        <%= form_tag user_path, method: :get, class: 'posts_search_form' do %>
            <% render 'layouts/posts_search_select_tag.html' %>
        <% end %>
    <% else %>
        <%= form_tag posts_path, method: :get, class: 'posts_search_form' do %>
            <% render 'layouts/posts_search_select_tag.html' %>
        <% end %>
    <% end %>              
<% end %>